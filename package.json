{
    "name": "wd-webiste-boilterplate",
    "version": "1.0.0",
    "description": "Simple webiste boilterplate",
    "scripts": {
        "start:webpack": "webpack --config webpack.config.js",
        "lint:fix": "npm run lint -- --fix",
        "build:scss": "node-sass --output-style compressed -o dist/styles src/styles",
        "watch:scss": "onchange -i -v \"./src/styles/*.scss\" -- npm run build:scss",
        "build:js": "eslint --fix ./src/js/*.js",
        "watch:js": "onchange -i -v \"./src/js/*.js\" -- eslint --fix ./src/js/*.js",
        "start": "browser-sync -s -f \"./index.html, dist/**/*, src/**/*\"",
        "watch:all": "concurrently \"npm start\" \"npm run watch:scss\" \"npm run watch:js\""
    },
    "author": "Wiktor DÄ™bski",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^6.0.2",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "node-sass": "^5.0.0",
        "onchange": "^7.1.0",
        "prettier": "^2.2.1",
        "prettier-eslint": "^12.0.0",
        "webpack": "^5.36.2",
        "webpack-cli": "^4.6.0"
    },
    "dependencies": {},
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix",
        "*.{js,css,scss,md}": "prettier --write"
    }
}
