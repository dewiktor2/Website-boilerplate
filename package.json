{
    "name": "wd-webiste-boilterplate",
    "version": "1.0.0",
    "description": "Simple webiste boilterplate",
    "scripts": {
        "start": "cross-env NODE_ENV=development webpack serve --config config/webpack.dev.js",
        "build": "cross-env NODE_ENV=production webpack --config config/webpack.prod.js",
        "deploy": "cross-env NODE_ENV=gh webpack --config config/webpack.gh.js && gh-pages -d dist",
        "lint": "eslint ./src/js/**",
        "lint:fix": "eslint ./src/js/** --fix",
        "prettier": "prettier --config .prettierrc.json --write ./src/js/**"
    },
    "author": "Wiktor DÄ™bski",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.14.0",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/preset-env": "^7.14.1",
        "babel-cli": "^6.26.0",
        "babel-loader": "^8.2.2",
        "clean-webpack-plugin": "^4.0.0-alpha.0",
        "concurrently": "^6.0.2",
        "copy-webpack-plugin": "^8.1.1",
        "cross-env": "^7.0.3",
        "css-loader": "^5.2.4",
        "css-minimizer-webpack-plugin": "^2.0.0",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.4.0",
        "gh-pages": "^3.1.0",
        "html-loader": "^2.1.2",
        "html-webpack-partials-plugin": "^0.8.0",
        "html-webpack-plugin": "^5.3.1",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "mini-css-extract-plugin": "^1.6.0",
        "node-sass": "^5.0.0",
        "onchange": "^7.1.0",
        "postcss-loader": "^5.2.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.2.1",
        "prettier-eslint": "^12.0.0",
        "sass-loader": "^11.0.1",
        "style-loader": "^2.0.0",
        "webpack": "^5.36.2",
        "webpack-cli": "^4.6.0",
        "webpack-merge": "^5.7.3"
    },
    "dependencies": {
        "webpack-dev-server": "^3.11.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix",
        "*.{js,css,scss,md}": "prettier --write"
    }
}
